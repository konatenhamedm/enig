            <div class="service">
                <div class="row">
                    <div class="col-md-4">
                        <div class="single-service">
                            <span class="icon"><i class="fa fa-plane"></i></span>
                            <div class="text">
                                <h2>Free standard delivery</h2>
                                <p>Lorem ipsum dolor sit amet</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="single-service">
                            <span class="icon"><i class="fa fa-refresh"></i></span>
                            <div class="text">
                                <h2>GARANTIE DE REMBOURSEMENT Ã€ 100 %</h2>
                                <p>Praesent mollis cursus risus non aliquam.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="single-service">
                            <span class="icon"><i class="fa fa-comments"></i></span>
                            <div class="text">
                                <h2>ASSISTANCE EN LIGNE 24H/24 ET 7J/7</h2>
                                <p>Fusce commodo justo sit amet neque</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="featured-and-special-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <hr />
                    <h3 class="heading-text-home-4">CATEGORIES</h3><br>

                </div>
            </div>
        </div>
    </div>
    <div class="top-category-product-area">
        <div class="container">
            <div class="row mb-n-30px">
                <!-- TOP-CATEGORY-SINGLE-PRODUCT START-->
                {% for data in pagination %}
                    <div class="col-lg-3 col-md-6 mb-30px ">
                        <div class="single-featured-product">
                            <div class="product_img">
                                <a href="#">
                                    <img  src="{{ asset('uploads/images/' ~ data.image) }}" alt="Category" class="primary-image">
                                    <img  src="{{ asset('uploads/images/' ~ data.image) }}" alt="Category" class="secondary-image">
                                </a>
                                {#{{ dump(data.libelle |replace({' ': '_'})) }}#}
                                <a class="modal-view" href="#" data-bs-toggle="modal" data-bs-target="#{{ data.libelle |replace({' ': '_'}) }}">
								<span class="quick-view">
									<i class="fa fa-external-link"></i>Voir
								</span>
                                </a>
                                <div class="add-cart-area">
                                    <div class="fet-price">
                                        <span class="addcart-text">{{ data.libelle }}</span>
                                        <span class="addcart-text-del"></span>
                                    </div>
                                    <div class="wish">
                                        <a href="#" class="shopping-cart">
                                            <i class="fa fa-address-card"></i>
                                        </a>
                                        <a href="#" class="favourite">
                                            <i class="fa fa-address-card"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="infor-text">
                                <h2 align="center"><a href="{{ path('affiche_produits',{'id': data.id }) }}"><span>{{ data.libelle | capitalize }}</span></a></h2>
                                <div class="row" >
                                    {% for p in data.getProduits %}
                                        <span align="center" > <a href="{{ path('one_produit',{'id': p.id }) }}" style="color: rgb(255, 197, 4)" ><span>{{ p.libelle | capitalize }}</span></a></span>
                                    {% endfor %}
                                </div>
                                {#<span class="star">
                                    <i class="fa fa-star active"></i>
                                    <i class="fa fa-star active"></i>
                                    <i class="fa fa-star active"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                </span>#}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <!-- TOP-CATEGORY-PRODUCT-AREA END-->
    </div>


    <div id="quickview-wrapper">
        <!-- Modal -->
        {% for modal in pagination %}
            <div class="modal fade" id="{{ modal.libelle |replace({' ': '_'}) }}" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close border-0" data-bs-dismiss="modal" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                        </div>
                        <div class="modal-body">
                            <div class="modal-product">
                                <div class="product-images">
                                    <div class="main-image images">
                                        <img alt=""  src="{{ asset('uploads/images/' ~ modal.image) }}">
                                    </div>
                                    {# {{ dump(modal.getProduits) }}#}
                                    <div class="thumbnail-img">
                                        {% for p in modal.getProduits %}
                                            <span>{{ p.libelle | capitalize }}</span><br>

                                        {% endfor %}
                                    </div>
                                </div><!-- .product-images -->

                                <div class="product-info">
                                    <h1>{{ modal.libelle }}</h1>
                                    <div class="price-box">
                                      {#  <p class="price"><span class="special-price"><span
                                                        class="amount">$120.00</span></span></p>#}
                                    </div>
                                  {#  <a href="#" class="see-all">Tous les produits</a>#}
                                    <div class="quick-add-to-cart">
                                        <form method="post" class="cart">
                                            <div class="numbers-row">
                                                <input type="text" id="french-hfens" value="{{ modal.getNombre }}">
                                            </div>
                                            <button class="single_add_to_cart_button" type="submit"> <a href="{{ path('affiche_produits',{'id': modal.id }) }}" class="">Tous les produits</a></button>
                                        </form>
                                    </div>
                                    <div class="quick-desc">
                                        {{ modal.description }}
                                    </div>
                                    <div class="social-sharing">
                                        <div class="widget widget_socialsharing_widget">
                                            <h3 class="widget-title-modal">Nous suivre sur</h3>
                                            <ul class="social-icons">
                                                <li><a target="_blank" title="Facebook" href="#"
                                                       class="facebook social-icon"><i class="fa fa-facebook"></i></a></li>
                                                <li><a target="_blank" title="Twitter" href="#"
                                                       class="twitter social-icon"><i class="fa fa-twitter"></i></a></li>
                                                <li><a target="_blank" title="Pinterest" href="#"
                                                       class="pinterest social-icon"><i class="fa fa-pinterest"></i></a>
                                                </li>
                                                <li><a target="_blank" title="Google +" href="#"
                                                       class="gplus social-icon"><i class="fa fa-google-plus"></i></a></li>
                                                <li><a target="_blank" title="LinkedIn" href="#"
                                                       class="linkedin social-icon"><i class="fa fa-linkedin"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div><!-- .product-info -->
                            </div><!-- .modal-product -->
                        </div><!-- .modal-body -->
                    </div><!-- .modal-content -->
                </div><!-- .modal-dialog -->
            </div>

        {% endfor %}
        <!-- END Modal -->
    </div>
{% endblock %}

